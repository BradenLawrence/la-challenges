<h2>Enter your article here</h2>

<form action="/articles/new" method="post">
  <label for="title">Title:</label>
  <input
    type="text"
    name="title"
    id="title"
    value="<%= @title %>"
  >

  <label for="description">Description:</label>
  <input
    type="text"
    name="description"
    id="description"
    value="<%= @description %>"
  >

  <input type="submit" value="Submit">
</form>
