<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Sinatra Template</title>
  </head>
  <body>
    <h1>Articles</h1>
    <ul>
      <% @articles.each do |article| %>
          <li>
            <h4><a href="articles/<%= article.id %>"><%= article.title %></a></h4>
            <p><a href="<%= article.url %>" target=_blank id="sourceURL_<%= article.id %>">Read full article</a></p>
            <p><%= article.description %></p>
          </li>
      <% end %>
    </ul>
    <a href="/articles/new">Submit a new article</a>
  </body>
</html>
